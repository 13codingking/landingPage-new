    </nav>
  </header>

  <div class="homeBlk" id="H">
    <div class="h1B">
      <h1 class="headM">Welcome to Our Admin Page</h1>
      <h1 class="headM">Add Project and Clients details..</h1>
      <button class="btn">More..</button>
    </div>
  </div>

  <div class="container">

    <div class="formBox">

      <h2 class="headM" id="P">Add Project</h2>
      <form action="/admin/project" method="POST" enctype="multipart/form-data">
        <input type="file" name="image" required>
        <input type="text" name="name" placeholder="Project Name" required>
        <textarea name="description" placeholder="Description" required></textarea>
        <button type="submit">Add Project</button>
      </form>
    </div>

    <div class="formBox">

      <h2 class="headM" id="C">Add Client</h2>
      <form action="/admin/client" method="POST" enctype="multipart/form-data">
        <input type="file" name="image" required>
        <input type="text" name="name" placeholder="Client Name" required>
        <input type="text" name="designation" placeholder="Designation" required>
        <textarea name="description" placeholder="Description" required></textarea>
        <button type="submit">Add Client</button>
      </form>
    </div>

    <h2 class="headM" id="CD">Contact Form Submissions</h2>
    <div class="mainBoxA">
      <% contacts.forEach(c=> { %>

        <div class="detail">

          <p><strong>
              <%= c.name %>
            </strong> </p>
          <p>
            <%= c.email %>
          </p>
          <p>
            <%= c.mobile %>
          </p>
          <p>
            <%= c.city %>
          </p>
        </div>

        <% }) %>

    </div>

    <h2 class="headM" id="E">Subscribe Emails</h2>
    <div class="mainBoxA">

      <% newsletters.forEach(n=> { %>
        <div class="detail">
          <p>
            <%= n.email %>
          </p>
        </div>
        <% }) %>

    </div>

  </div>

